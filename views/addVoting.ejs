<%-include('./includes/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
           <div class="card shadow">
            <div class="card-header bg-primary">
                <h3 class="text-light">Add New Voting</h3>
            </div>
            <div class="card-body p-4">
                <form action="/addVoting" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="candidate">Candidate:</label>
                        <select name="candidate_id" id="candidate" class="form-control form-control-lg" required>
                            <% candidates.forEach((candidate) => { %>
                            <option value="<%= candidate.id %>" ><%= candidate.email %></option>
                            <% }) %>
                        </select>
                    </div>
                <div class="mb-3 d-grid">
                    <input type="submit" name="submit" value="Add Voting" class="btn btn-primary btn-lg">
                </div>
                </form>
            </div>
           </div>
            
        </div>
    </div>
</div>
<%- include('./includes/footer') %>