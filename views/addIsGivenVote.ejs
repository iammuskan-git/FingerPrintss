<%-include('./includes/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
           <div class="card shadow">
            <div class="card-header bg-primary">
                <h3 class="text-light">Add New IsGivenVote</h3>
            </div>
            <div class="card-body p-4">
                <form action="/addIsGivenVote" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="voter">Voter:</label>
                        <select name="voter_id" id="voter" class="form-control form-control-lg" required>
                            <% voters.forEach((voter) => { %>
                            <option value="<%= voter.id %>" ><%= voter.email %></option>
                            <% }) %>
                        </select>
                    </div>
                <div class="mb-3 d-grid">
                    <input type="submit" name="submit" value="Add IsGivenVote" class="btn btn-primary btn-lg">
                </div>
                </form>
            </div>
           </div>
            
        </div>
    </div>
</div>
<%- include('./includes/footer') %>